#!/bin/bash

echo "Symlinking dotfiles..."

DOTFILES=(config gemrc gitconfig tmux.conf zshrc)
PWD=$(pwd)

for file in "${DOTFILES[@]}"; do
  echo -n "  $file..."
  if [ -e "$HOME/.$file" ]; then
    if [ "$FORCE" != "true" ]; then
      echo " [SKIP]"
      continue
    fi

    rm -rf $HOME/.$file
  fi

  ln -s $PWD/$file ~/.$file
  echo " [OK]"
done

echo
echo "Creating local files..."

LOCALFILES=(gitconfig.local zshrc.local)

for file in "${LOCALFILES[@]}"; do
  echo -n "  $file..."
  if [ -e "$HOME/.$file" ]; then
    if [ "$FORCE" != "true" ]; then
      echo " [SKIP]"
      continue
    fi
  fi

  touch $HOME/.$file
  echo " [OK]"
done
